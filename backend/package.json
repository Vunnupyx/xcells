{
  "name": "infinitymaps-backend",
  "version": "0.1.0",
  "description": "persist data and proxy changes to collaboraters",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js",
    "build": "cross-env NODE_ENV=production babel src -d build",
    "dev": "cross-env DEBUG=${DEBUG:-'infinity:*'} nodemon src/index.js",
    "test": "cross-env DEBUG=${DEBUG:-''} NODE_ENV=test jest --verbose --coverage --reporters=default --reporters=jest-junit",
    "format": "npx eslint src --fix",
    "lint": "npx eslint src",
    "user": "npx babel-node --presets @babel/preset-env scripts/createUser.js"
  },
  "author": "Robin Lutz",
  "license": "UNLICENSED",
  "dependencies": {
    "@babel/runtime": "^7.16.0",
    "@koa/router": "^10.1.1",
    "archiver": "^5.3.1",
    "async-mutex": "^0.3.2",
    "automerge": "^0.14.2",
    "bcryptjs": "^2.4.3",
    "cookie": "^0.4.1",
    "debug": "^4.3.2",
    "entropy-string": "^4.2.0",
    "html-entities": "^1.4.0",
    "html-to-text": "^8.0.0",
    "immutable": "^3.8.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-body-parsers": "^3.1.0",
    "koa-compress": "^5.1.0",
    "koa-jwt": "^4.0.3",
    "koa-logger": "^3.2.1",
    "koa-qs": "^3.0.0",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0",
    "mime": "^2.5.2",
    "mongoose": "^6.0.12",
    "mongoose-gridfs": "1.3.0",
    "nodemailer": "6.9.1",
    "n3": "^1.16.0",
    "node-fetch": "^2.6.7",
    "prom-client": "^14.0.1",
    "rdf": "^4.1.0",
    "socket.io": "^2.4.1",
    "unzipper": "^0.10.11",
    "ws": "^8.5.0",
    "xml2js": "^0.4.23",
    "y-websocket": "^1.4.0",
    "yjs": "^13.5.34"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/node": "^7.16.8",
    "@types/nodemailer": "6.4.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.17.3",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-flow": "^7.16.7",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "babel-jest": "^27.5.1",
    "babel-plugin-source-map-support": "^2.1.3",
    "cross-env": "^6.0.3",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "fetch-mock-jest": "^1.5.1",
    "jest": "^27.5.1",
    "jest-junit": "^13.1.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "supertest": "^6.2.2"
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "jest": {
    "moduleDirectories": ["node_modules", "<rootDir>/src"],
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "src/lib/env",
      "src/bin",
      "src/index.js",
      "src/io.js",
      "src/scripts/*"
    ]
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      "@babel/preset-flow",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
